/* userinfo.wxss */

@import "/common/weui.wxss";

.header{
    position: relative;
    height: 160rpx;
    line-height: 100rpx;
    padding:30rpx 30rpx 30rpx 150rpx;
    box-sizing: border-box;
    background: #AB956D;
    font-size: 28rpx;
    color: #fff;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.header .about{
    float: right;
}
.title {
  line-height: 70rpx;
  box-sizing: border-box;
  padding: 0 20rpx 0 20rpx;
}

.info_item {
  background: white;
  width: auto;
  line-height: 90rpx;
  box-sizing: border-box;
  margin: 20rpx 0 0 0;
}

.Text {
  line-height: 90rpx;
  box-sizing: border-box; 
  width: auto;
}
.caption{
  font-size: 30rpx;
  color:#888;
}
.btnSubmit{
  margin: 50rpx 50rpx 50rpx 50rpx;
  background: #db423f;
  color: white;
}
.getCode{
color:blue;
width: 300rpx;
}
.area-item{
  line-height: 45rpx;
height: 100rpx;
padding-top: 16rpx;
padding-right: 20rpx;
}
.shopmap{
  width: 100%;
  height: 400rpx;
}
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.3);
}
.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}
.tips{
  font-size: 20rpx;
  text-align: center;
  margin: 20rpx 0 0 0;
  color: gray;
}
.shopaddr{
  font-size: 30rpx;
  border-bottom: 1rpx  solid black;
}
.map{
  margin: 20rpx 0 0 0;
  height: 10rpx;
}
.tab{
  margin: 20rpx 0 0 30rpx;
}
